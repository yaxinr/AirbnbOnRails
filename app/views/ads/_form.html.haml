= form_for @ad do |f|
  - if @ad.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ad.errors.count, "error")} prohibited this ad from being saved:"
      %ul
        - @ad.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :photo
    = f.text_field :photo
  .field
    = f.label :facilities
    = f.text_area :facilities
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :address
    = f.text_area :address
  .actions
    = f.submit 'Save'
